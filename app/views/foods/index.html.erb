<% if user_signed_in? %>
  <a class="btn" href="<%= user_path(current_user.id) %>"><span>マイページへ</span><span>Click</span></a>
<% end %>
<h2>投稿を検索</h2>
 <%= form_tag({controller:"foods",action:"index"}, method: :get) do %>
   <%= text_field_tag :search %>
   <%= submit_tag '検索する'  %>
<% end %>

<%= form_tag({controller:"foods",action:"index"}, method: :get) do %>
  <% Tag.all.each do |t| %>
      <li><%= check_box :tag_ids, t.name %><%= t.name %></li>
  <% end %>
  <%= submit_tag '検索' %>
<% end %>

<h2>一覧ページ</h2>
<%= link_to("新規投稿へ", new_food_path, {class: "nav-link"} ) %>
<div class=travel>
      <div class="foods-container">
        <h5><span class="shadow">Foods</span></h5>
        <% @foods.select { |food| food.genre == 'food' }.each do |food| %>
          <div class="box">
          <%= image_tag food.user.image_url, size: "45x50" if food.user.image? %>
          <div class="food">
            <%= link_to food.user.name, user_path(food.user.id) %>            
            <%= food.name %>
            <br>
            <%= food.created_at %>
            <div>
              <h2>総合評価：
              <span class="star-rating">
                <span class="star-rating-front" style="width: <%= getPercent(food.overall) %>%;">★★★★★</span>
                <span class="star-rating-back">★★★★★</span>
              </span> 
              </h2>
              </div>
            <%= food.body %>
            <br>
            <%= link_to "詳細へ", food_path(food.id) %>
            <%= link_to "編集する", edit_food_path(food.id) %>
            <%= button_to "削除する", food_path(food.id), method: :delete %>
            <%= image_tag food.image_url, size: "250x200" if food.image? %>
          </div>
          </div>
        <% end %>
      </div>

      <div class="spots-container">
        <h5><span class="shadow2">Spots</span></h5>
         <% @foods.select { |food| food.genre == 'spot' }.each do |spot| %>
          <div class="box">
          <%= image_tag spot  .user.image_url, size: "45x50" if spot.user.image? %>
           <div class="spot">
            <%= link_to spot.user.name, user_path(spot.user.id) %>           
            <%= spot.name %>
            <br>
            <%= spot.created_at %>
            <div>
            <h2>総合評価：
            <span class="star-rating">
              <span class="star-rating-front" style="width: <%= getPercent(spot.overall) %>%;">★★★★★</span>
              <span class="star-rating-back">★★★★★</span>
            </span> 
            </h2>
            </div>
            <%= spot.body %>
            <br>
            <%= link_to "詳細へ", food_path(spot.id) %>
            <%= link_to "編集する", edit_food_path(spot.id) %>
            <%= button_to "削除する", food_path(spot.id), method: :delete %>
            <%= image_tag spot.image_url, size: "250x200" if spot.image? %>
          </div>
          </div>
         <% end %>
        </div>
      </div>
