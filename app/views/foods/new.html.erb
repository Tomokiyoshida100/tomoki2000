<h3>新規投稿ページ</h3>
<%= form_for @food do |f| %>


  <div class="field">
    <%= f.label :name %>
    <%= f.text_field :name, :size => 30 %>
  </div>


  <div class="field">
    <%= f.label :genre  %>
    <%= f.select :genre, 
    [["food", "food"],  
    ["spot", "spot"]], include_blank: "選択して下さい" %>
  </div>


  <div class="field">
    <%= f.label :body  %>
    <%= f.text_area :body, :size => "30x2" %>
  </div>

  <div class="field">
    <%= f.label :image %>
    <%= f.file_field :image %>
  </div>

  <div class='form-group'>
        <%= f.collection_check_boxes(:tag_ids, Tag.all, :id, :name) do |tag| %>
            <div class='form-check'>
                <%= tag.label class: 'form-check-label' do %>
                    <%= tag.check_box class: 'form-check-input' %>
                    <%= tag.text %>
                <% end %>
            </div>
        <% end %>
  </div>

  <%= f.submit "投稿する" %>
<% end %>

<%= link_to "投稿一覧に戻る", foods_path %>
