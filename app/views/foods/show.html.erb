
<h1>詳細ページ</h1>
<div class="tweet">
<%= @food.name %>
<br>
            <%= @food.body %>
            <br>
            <%= @food.created_at %>
            <div>
              <h2>総合評価：
              <span class="star-rating">
                <span class="star-rating-front" style="width: <%= getPercent(@food.overall) %>%;">★★★★★</span>
                <span class="star-rating-back">★★★★★</span>
              </span> 
              </h2>
              </div>
            <%= image_tag @food.image_url, size: "250x200" if @food.image? %>
            <br>
            <%= link_to "編集する", edit_food_path(@food.id) %>
            <%= button_to "削除する", food_path(@food.id), method: :delete %>
</div>

<%= link_to "Tweet一覧に戻る", foods_path %>

